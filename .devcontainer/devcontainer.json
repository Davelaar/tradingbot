{
  "name": "tradingbot-codex",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": false
    }
  },
  "postCreateCommand": "python -m pip install --upgrade pip && [ -f requirements.txt ] && pip install -r requirements.txt || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "github.vscode-pull-request-github",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml"
      ]
    }
  },
  "forwardPorts": [6379, 9090, 3000]
}
